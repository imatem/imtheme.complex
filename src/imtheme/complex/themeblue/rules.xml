<?xml version="1.0" encoding="utf-8"?>
<rules xmlns="http://namespaces.plone.org/diazo"
       xmlns:css="http://namespaces.plone.org/diazo/css"
       xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
       xmlns:xi="http://www.w3.org/2001/XInclude">

    <!-- HOME -->
    <rules css:if-content=".section-inicio">
        <theme href="index.html" css:if-content=".section-inicio" />
        <replace css:theme-children="#my-topnav" css:content-children="#portal-globalnav" />
        <drop css:content=".globalSectionsLevel1" />
        <replace css:theme-children=".submenu-accions" css:content-children="#portal_actions" />
        <!-- move roler -->
        <replace css:theme-children="#slider-wrapper" css:content-children=".slideshow-header-container" />
        <!-- move toblerone -->
        <replace css:theme="#toblerone" css:content="#sb-slider" method="raw" />
        <!-- <replace css:theme="column1-container" css:content-children="collage_view_im_move_news_standard" /> -->
<!-- collage_view_im_move_news_standard -->
<!-- collage_view_im_news_standard -->
<!-- collage_view_collection_im_without_sumary -->
        <replace css:theme="#rotated" css:content="#rotated" method="raw" />
        <replace css:theme="#notices" css:content=".news_imstandard" method="raw" />
        <replace css:theme="#exchanges" css:content=".collection_im_without_summary" method="raw" />
    </rules>

    <rules css:if-not-content=".section-inicio">
        <theme href="index.html"/>
        <!-- CSS -->
        <after css:theme-children="head" css:content="head link" />
        <after css:theme-children="head" css:content="head style" />
        <replace css:theme-children="#my-topnav" css:content-children="#portal-globalnav" />
        <drop css:content=".globalSectionsLevel1" />
        <drop css:theme="#slider-wrapper" />
        <replace css:theme-children="#main-container" css:content-children="#portal-columns" />
        <drop css:theme="footer" />
    </rules>

</rules>
