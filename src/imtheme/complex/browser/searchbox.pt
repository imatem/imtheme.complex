<div class="tools">

  <div class="alltools">

    <div class="emailviewlet">
      <a  href="">
          <img src="++resource++imtheme.complex/images/mail.png" align="left" /> <b class="logintext">Correo Interno</b>
      </a>
    </div>

    <div class="sesionimg">
      <tal:block condition="view/is_anonymous">
        <a tal:attributes="href view/gologin">
          <b class="logintext">Entrar</b>
          <img src="++resource++imtheme.complex/images/entrar.png" align="right" />
        </a>
      </tal:block>

      <tal:block condition="not: view/is_anonymous">
        <a tal:define="userinfo view/user_name_home"
           tal:attributes="href userinfo/homelink">
          <b class="logintext" tal:content="userinfo/name">John</b>
          <img src="++resource++imtheme.complex/images/usuario.png" align="right" />
        </a>
      </tal:block>
    </div>

    <div id="portal-searchbox"
         i18n:domain="plone"
         tal:define="navigation_root_url view/navigation_root_url;
                     search_input_id view/search_input_id;">
      <form id="searchGadget_form"
            action="@@search"
            tal:attributes="action string:${navigation_root_url}/@@search;
                              id string:${search_input_id}_form;">

        <div class="LSBox" >
          <label class="hiddenStructure"
                  tal:attributes="for search_input_id"
                  i18n:translate="text_search">Search Site</label>

          <div style="display: flex;">
            <b class="logintext">Buscar</b>
            <input name="SearchableText"
                   type="text"
                   size="28"
                   value=""
                   title="Search Site"
                   placeholder="Search Site"
                   accesskey="4"
                   i18n:attributes="title title_search_site;
                                    placeholder title_search_site"
                   tal:attributes="value request/form/SearchableText|nothing;
                                   id search_input_id"
                   class="searchField" />

            <input type="image" src="++resource++imtheme.complex/images/lupa.png"/>
          </div>

          <div class="searchSection">
            <input id="searchbox_currentfolder_only"
                   class="noborder"
                   type="checkbox"
                   name="path"
                   tal:attributes="value view/folder_path;
                                   checked request/form/path|nothing"
            />
            <label for="searchbox_currentfolder_only"
                   i18n:translate="label_searchbox_currentfolder_only"
                   style="cursor: pointer">
                only in current section
            </label>
          </div>

          <div class="LSResult" id="LSResult"><div class="LSShadow" id="LSShadow"></div></div>
        </div>
      </form>

      <div id="portal-advanced-search"
           class="hiddenStructure">
        <a href="#"
           tal:attributes="href string:${navigation_root_url}/@@search"
           i18n:translate="label_advanced_search"
           accesskey="5">
            Advanced Search&hellip;
        </a>
      </div>


    </div><!-- end searchbox -->

  </div>
</div>
<div style="clear: both;"></div>
