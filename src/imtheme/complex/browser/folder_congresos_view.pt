<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

    <metal:block fill-slot="top_slot"
      tal:define="
                disable_column_one python:request.set('disable_plone.leftcolumn',1);
                disable_column_two python:request.set('disable_plone.rightcolumn',1);"
    />

<body>

    <metal:content-core fill-slot="content-core">
        <metal:block define-macro="listing" extend-macro="context/folder_listing/macros/content-core">
            <!-- we don't want the dl -->


            <metal:entries fill-slot="entries">
              <ul class="grid-container">
                <metal:block use-macro="context/folder_listing/macros/entries">
                    <metal:entry fill-slot="entry">
                <tal:congreso tal:define="item_object item/getObject;">
                  <li>
                    <a href="#"
                       tal:condition="exists:item_object/image_thumb"
                       tal:attributes="href python:test(item_type in use_view_action, item_url+'/view', item_url)">
                        <img tal:attributes="src string:${item_object/absolute_url}/image; alt item/pretty_title_or_id" />
                    </a>
                      <p class="congress-title" tal:content="item_object/Title" />
                      <p class="congress-date" tal:content="item_object/prety_date" />
                      <p class="congress-place" tal:content="item_object/eventplace" />


                  </li>
                </tal:congreso>

                    </metal:entry>
                </metal:block>
              </ul>
            </metal:entries>
        </metal:block>
    </metal:content-core>

</body>
</html>
