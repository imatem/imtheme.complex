<?xml version="1.0" encoding="utf-8"?>
<rules xmlns="http://namespaces.plone.org/diazo"
       xmlns:css="http://namespaces.plone.org/diazo/css"
       xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
       xmlns:xi="http://www.w3.org/2001/XInclude">

  <!-- FRONTEND ONLY BLOCK -->
  <!-- <theme href="index.html" /> -->
  <notheme css:if-not-content=".section-inicio" />

  <rules css:if-content="#portal-top">
    <!-- Base tag -->
    <before css:theme="title" css:content="base" />
    <!-- Title -->
    <replace css:theme="title" css:content="title" />
    <!-- Pull in Plone Meta -->
    <after css:theme-children="head" css:content="head meta" />
    <!-- CSS -->
    <after css:theme-children="head" css:content="head link" />
    <after css:theme-children="head" css:content="head style" />
    <!-- Script -->
    <after css:theme-children="head" css:content="head script" />
  </rules>

  <!-- move user bar -->
  <replace css:theme="#portal-tools" css:content="#portal-header .tools" method="raw"/>

  <!-- move global nav -->
  <replace css:theme-children="#mainnavigation" css:content="#portal-globalnav" />
  <drop css:content=".globalSectionsLevel1" />

  <!-- move user bar -->
  <replace css:theme=".submenu" css:content=".logos-home" method="raw"/>

 <!-- move roler -->
  <replace css:theme="#slider" css:content=".slideshow-header-container" method="raw"/>


  <!-- Central column -->
  <replace css:theme="#content-container" css:content="#portal-column-content" method="raw" />




</rules>
